{
	"name": "tmi.js",
	"version": "2.0.0",
	"description": "",
	"type": "module",
	"main": "./dist/tmi.node.mjs",
	"browser": "./dist/tmi.esm-browser.min.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/tmi.index.d.ts",
			"import": "./dist/tmi.node.mjs",
			"require": "./dist/tmi.node.cjs",
			"default": "./dist/tmi.node.cjs"
		}
	},
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"start": "node --trace-warnings --loader tsx/esm src/test.ts",
		"build": "npm run build:scripts && npm run clean && node --enable-source-maps scripts/esbuild.js && tsc",
		"build:scripts": "npm run clean:scripts && tsc --project tsconfig.scripts.json",
		"clean": "rm -rf dist/*",
		"clean:scripts": "rm -rf scripts/*.{js,js.*,d.*}",
		"lint": "prettier --check src && eslint --format=pretty src",
		"lint:scripts": "prettier --check scripts && eslint --format=pretty scripts",
		"format": "prettier --write src && eslint --fix --format=pretty src",
		"format:scripts": "prettier --write scripts && eslint --fix --format=pretty scripts",
		"fmt": "npm run format",
		"fmt:scripts": "npm run format:scripts",
		"prepack": "npm run lint && npm run build",
		"prepare": "is-ci || husky"
	},
	"files": [
		"dist"
	],
	"keywords": [],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"eventemitter3": "^5.0.1",
		"isomorphic-ws": "^5.0.0",
		"ws": "^8.16.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.6.1",
		"@commitlint/config-angular": "^18.6.1",
		"@types/lodash.merge": "^4.6.9",
		"@types/node": "^18.19.5",
		"@types/ws": "^8.5.10",
		"esbuild": "^0.19.11",
		"esbuild-plugin-version-injector": "^1.2.1",
		"eslint": "^8.56.0",
		"eslint-config-neon": "^0.1.58",
		"eslint-formatter-pretty": "^6.0.1",
		"husky": "^9.0.11",
		"is-ci": "^3.0.1",
		"lint-staged": "^15.2.2",
		"lodash.merge": "^4.6.2",
		"prettier": "^3.2.5",
		"tslib": "^2.6.2",
		"tsx": "^4.7.0",
		"typescript": "^5.3.3"
	}
}
